{% extends "base.html.jinja2" %}
{% from 'bootstrap5/form.html' import render_form, render_messages %}
{% block title %}Search - Chop Shop Sign In{% endblock %}
{% block content %}
  <div id="searchContainer" class="container pt-3">
    <div class="row">
      {{ render_messages() }}
      <div class="col">{{ render_form(form, extra_classes="search-form") }}</div>
      <div class="col-lg-6 py-3">
        <table class="table table-striped table-hover table-dark">
          <thead>
            <th scope="col">Name</th>
            <th scope="col">Hours</th>
          </thead>
          {%- for result in results -%}
            <tr>
              <th>{{ result[0] }}</th>
              <td>{{ result[1] }}</td>
            </tr>
          {%- endfor -%}
        </table>
      </div>
    </div>
  </div>
{% endblock %}
