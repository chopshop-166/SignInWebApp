{% extends "base.html.jinja2" %}
{% from 'bootstrap5/form.html' import render_form %}
{% block title %}
  Password Reset
{% endblock title %}
{% block bodyAttrs %}
  class="password bg-robot"
{% endblock bodyAttrs %}
{% block content %}
  <div class="parent d-flex align-items-center">
    <div class="p-5 bg-dark rounded-3 container">
      <h1>Change Password for {{ current_user.name }}</h1>
      {{- render_messages() -}}
      {{ render_form(form) }}
    </div>
  </div>
{% endblock content %}
