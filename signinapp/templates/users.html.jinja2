{% extends "base.html.jinja2" %}
{% block title %}User Admin - Chop Shop Sign In{% endblock %}
{% block content %}
  <div class="container pt-3">
    <div class="d-flex flex-row align-items-center justify-content-between">
      <h1>Users List</h1>
      <a href="{{ url_for('admin.new_user')}}">
        <button class="btn btn-primary">New User</button>
      </a>
    </div>
    {{- render_messages() -}}
    <div class="table-responsive">
      <table id="users" class="table table-striped table-hover table-dark">
        <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Subteam</th>
            <th scope="col">Total Time</th>
            <th scope="col">Phone Number</th>
            <th scope="col">email</th>
            <th scope="col">Address</th>
            <th scope="col">T-Shirt Size</th>
            <th scope="col">Grade</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody id="userbody">
          {%- for user in users -%}
            <tr>
              <th>
                <a class="link-light"
                   href="{{ url_for('user.profile', user_id=user.id)}}">{{ user.display_name }}</a>
              </th>
              <td>{{ user.subteam.name }}</td>
              <td>{{ user.total_time }}</td>
              <td>{{ user.formatted_phone_number }}</td>
              <td>{{ user.email }}</td>
              <td>{{ user.address }}</td>
              <td>{{ user.tshirt_size.value }}</td>
              <td>{{ user.student_user_data.display_grade if user.student_user_data else "N/A" }}</td>
              <td>
                <div class="btn-group" role="group" aria-label="User Actions">
                  <a class="btn btn-secondary"
                    href="{{ url_for('admin.edit_user', user_id=user.id)}}"
                    role="button">Edit</a>
                  <a class="btn btn-danger"
                    href="{{ url_for('admin.delete_user', user_id=user.id)}}"
                    role="button">Delete</a>
                </div>
                {%- if current_user.is_authenticated and current_user.role.admin and not user.approved -%}
                <form class="inlineform"
                      action="{{ url_for('admin.user_approve', user_id=user.id)}}"
                      id="approve{{ user.id }}"
                      method="POST">
                  <button class="btn btn-warning"
                    action="submit">Approve</button>
                </form>
                {%- endif -%}
              </td>
            </tr>
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
