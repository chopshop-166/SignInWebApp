{% extends "base.html.jinja2" %}
{% block title %}User Admin{% endblock %}
{% block content %}
<div id="userListContainer" class="container pt-3">
  <div class="d-flex flex-row align-items-center justify-content-between">
    <h1>Users List</h1>
  </div>
  {{- render_messages() -}}
  <div class="table-responsive">
    <table id="users">
      <thead>
        <tr>
          <th scope="col">User</th>
          <th scope="col">Subteam</th>
          <th scope="col">Total Time</th>
          <th scope="col">Phone Number</th>
          <th scope="col">email</th>
          <th scope="col">Address</th>
          <th scope="col">T-Shirt Size</th>
          {%- if current_user.is_authenticated and current_user.role.admin -%}
          <th scope="col">Edit</th>
          {%- endif -%}
        </tr>
      </thead>
      <tbody>
        {%- for user in users -%}
        <tr>
          <th>
            <a class="link-light" href="{{ url_for('user.profile', username=user.username)}}">
              {{user.full_name}}
            </a>
          </th>
          <td>{{ user.subteam.name }}</td>
          <td>{{ user.total_time }}</td>
          <td>{{ user.formatted_phone_number }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.address }}</td>
          <td>{{ user.tshirt_size.value }}</td>
          {%- if current_user.is_authenticated and current_user.role.admin -%}
          <td>
            <div class="btn-group" role="group" aria-label="User Actions">
              <a class="btn btn-secondary" href="{{ url_for('admin.edit_user', user_id=user.id)}}"
                role="button">Edit</a>
              {%- if user.role.name == "student" -%}
              <a class="btn btn-info" href="{{ url_for('admin.edit_student_data', user_id=user.id)}}"
                action="submit">Edit Student</a>
              {%- elif user.role.guardian -%}
              <a class="btn btn-info" href="{{ url_for('admin.edit_guardian_data', user_id=user.id)}}"
                action="submit">Edit Guardian</a>
              {%- endif -%}
              <a class="btn btn-danger" href="{{ url_for('admin.delete_user', user_id=user.id)}}"
                role="button">Delete</a>
            </div>
            {%- if not user.approved -%}
            <form class="inlineform" action="{{ url_for('admin.user_approve', user_id=user.id)}}"
              id="approve{{ user.id }}" method="POST">
              <button class="btn btn-warning" action="submit">Approve</button>
            </form>
            {%- endif -%}
          </td>
          {%- endif -%}
        </tr>
        {%- endfor -%}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}